<h1>Show Task</h1>

<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th scope="row">
        Status
      </th>
      <td id="table-content">
        <%= if @task.complete do %>
          ğŸ‘
        <% else %>
          ğŸ‘
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Title
      </th>
      <td>
        <%= @task.title %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Who
      </th>
      <td>
        <%= @task.user.name %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Description
      </th>
      <td id="tasks-description">
        <%= @task.description %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Time Spent (minutes)
      </th>
      <td>
        <%= @task.duration %>
      </td>
    </tr>
  </tbody>
</table>

<%= if @current_user do %>
  <%= if @current_user.name == @task.user.name do %>
    <span><%= link "Edit", class: "btn btn-lg btn-block btn-warning", to: Routes.task_path(@conn, :edit, @task) %></span>
  <% end %>
<% end %>
